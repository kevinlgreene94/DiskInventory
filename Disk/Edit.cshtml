@model DiskTable
@{ 
    string title = ViewBag.Action + " Disk";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="DiskName">Disk Name</label>
        <input asp-for="DiskName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date</label>
        <input asp-for="ReleaseDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="StatusId">Status</label>
        <select asp-for="StatusId" class="form-control">
            <option value="select a status">Select a Status</option>
            @foreach (DiskStatus s in ViewBag.Statuses)
            {
                <option value="@s.StatusId">@s.Descrip</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" class="form-control">
            <option value="select a genre">Select a Genre</option>
            @foreach (DiskGenre g in ViewBag.Genres)
            {
                <option value="@g.GenreId">@g.Descrip</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DiskTypeId">Disk Type</label>
        <select asp-for="DiskTypeId" class="form-control">
            <option value="select a disk type">Select a Disk Type</option>
            @foreach (DiskType t in ViewBag.DiskTypes)
            {
                <option value="@t.DiskTypeId">@t.Descrip</option>
            }
        </select>
    </div>

    <input type="hidden" asp-for="DiskId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Disk" asp-action="Index" class="btn btn-danger">Cancel</a>
</form>