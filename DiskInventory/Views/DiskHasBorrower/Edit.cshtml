@model DiskHasBorrowerViewModel
@{ 
    string title = ViewBag.Action + " Checkout";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CurrentVM.DiskId">Disk Name</label>
        <select asp-for="CurrentVM.DiskId" class="form-control">
            <option value="">Select a Disk</option>
            @foreach (DiskTable d in Model.Disks)
            {
                <option value="@d.DiskId">@d.DiskName</option>
            }
        </select>
        
    </div>
    <div class="form-group">
        <label asp-for="CurrentVM.BorrowerId">Borrower Name</label>
        <select asp-for="CurrentVM.BorrowerId" class="form-control">
            <option value="">Select a Borrower</option>
            @foreach (Borrower b in Model.Borrowers)
            {
                <option value="@b.BorrowerId">@b.Lname, @b.Fname</option>
            }
        </select>
    </div>
    <div>
        <label asp-for="CurrentVM.BorrowDate">Borrow Date</label>
        <input asp-for="CurrentVM.BorrowDate" class="form-control" type="date"/>
    </div>
    <div>
        <label asp-for="CurrentVM.ReturnDate">Return Date</label>
        <input asp-for="CurrentVM.ReturnDate" class="form-control" type="date" />
    </div>

    <input type="hidden" asp-for="CurrentVM.DiskHasBorrowerId" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="DiskHasBorrower" asp-action="Index" class="btn btn-danger">Cancel</a>
</form>
