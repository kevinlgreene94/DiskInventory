@model List<DiskHasBorrower>
@{
    ViewBag.Title = "Checkin / Checkout Manager";
}

<h2>@ViewBag.Title</h2>

<a asp-controller="DiskHasBorrower" asp-action="Add" class="btn btn-success mb-1">Add New Checkout</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Disk Name</th>
            <th>Borrower Last Name</th>
            <th>Borrower First Name</th>
            <th>Borrow Date</th>
            <th>Return Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var diskhasborrower in Model)
        {
            <tr>
                <td>@diskhasborrower.Disk.DiskName</td>
                <td>@diskhasborrower.Borrower.Lname</td>
                <td>@diskhasborrower.Borrower.Fname</td>
                <td>@diskhasborrower.BorrowDate.ToString("dd MMM yyyy")</td>
                <td>@diskhasborrower.ReturnDate?.ToString("dd MMM yyyy")</td>
                <td>
                    <a asp-controller="DiskHasBorrower" asp-action="Edit" asp-route-id="@diskhasborrower.DiskHasBorrowerId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>